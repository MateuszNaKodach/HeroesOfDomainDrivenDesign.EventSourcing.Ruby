<%= form_with(url: recruit_heroes_creature_recruitment_dwelling_path(@dwelling), local: true, method: :post, id: 'recruit-form') do |form| %>
  <div class="page-container">
    <div class="recruitment-component">
      <h1 class="title-text">Recruit <%= @dwelling.creature_id.capitalize.pluralize %></h1>
      <%= image_tag "Recruit#{@dwelling.creature_id.capitalize}Image.png", alt: "#{@dwelling.creature_id.capitalize} image", class: "creature-image" %>
      <div class="controls">
      <div class="cost-per-troop">
        <p>Cost Per Troop</p>
        <div class="cost_details">
          <% @dwelling.cost_per_troop['resources'].each do |resource, amount| %>
            <div class="<%= resource.downcase %>_cost">
              <%= image_tag "#{resource.downcase}_resource.png", alt: "#{resource.capitalize} resource" %>
              <div class="cost_count"><%= amount %></div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="controls__center">
        <div class="creatures__counts">
          <div class="creatures__count">
            <div class="count_title">Available</div>
            <div class="count"><%= @dwelling.available_creatures %></div>
          </div>
          <div class="creatures__count">
            <div class="count_title">Recruit</div>
            <div class="count" id="recruit-count">1</div>
          </div>
        </div>
        <div class="creatures__count-slider">
          <input type="range" min="0" max="<%= @dwelling.available_creatures %>" value="0" class="slider" id="recruit-slider">
        </div>
      </div>
      <div class="cost-per-troop">
        <p>Total Cost</p>
        <div class="cost_details" id="total-cost">
          <% @dwelling.cost_per_troop['resources'].each do |resource, amount| %>
            <div class="<%= resource.downcase %>_cost">
              <%= image_tag "#{resource.downcase}_resource.png", alt: "#{resource.capitalize} resource" %>
              <div class="cost_count" id="total-<%= resource.downcase %>"><%= amount %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

      <div class="buttons">
        <button type="button" class="select_all_buttons" id="select-all-btn">
          <%= image_tag "button_select_all.png", alt: "Select All", class: "button-image" %>
        </button>
        <button type="button" class="recruit_button" id="recruit-btn">
          <%= image_tag "button_recruit.png", alt: "Recruit", class: "button-image" %>
        </button>
        <button type="button" class="cancel_button" id="cancel-btn">
          <%= image_tag "button_cancel.png", alt: "Cancel", class: "button-image" %>
        </button>
      </div>
    </div>
  </div>
  <%= form.hidden_field :recruit_count, id: 'recruit-count-input' %>
<% end %>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const slider = document.getElementById('recruit-slider');
        const recruitCount = document.getElementById('recruit-count');
        const selectAllBtn = document.getElementById('select-all-btn');
        const recruitBtn = document.getElementById('recruit-btn');
        const cancelBtn = document.getElementById('cancel-btn');

        const recruitForm = document.getElementById('recruit-form');
        const recruitCountInput = document.getElementById('recruit-count-input');

        function updateTotalCost(count) {
            <% @dwelling.cost_per_troop['resources'].each do |resource, amount| %>
            document.getElementById('total-<%= resource.downcase %>').textContent = count * <%= amount %>;
            <% end %>
        }

        function updateRecruitCount(count) {
            recruitCount.textContent = count;
            updateTotalCost(count);
        }

        // Initialize with 1
        updateRecruitCount(1);

        slider.addEventListener('input', function() {
            const count = parseInt(this.value);
            updateRecruitCount(count);
        });

        selectAllBtn.addEventListener('click', function() {
            slider.value = <%= @dwelling.available_creatures %>;
            updateRecruitCount(<%= @dwelling.available_creatures %>);
        });

        recruitBtn.addEventListener('click', function(e) {
            e.preventDefault();
            recruitCountInput.value = parseInt(slider.value);
            recruitForm.submit();
        });

        cancelBtn.addEventListener('click', function() {
            window.location.href = '<%= heroes_creature_recruitment_dwellings_path %>';
        });
    });
</script>